{
  "id": "/kdc",
  "instances": 1,
  "cpus": 0.5,
  "mem": 128,
  "user": "nobody",
  "container": {
    "type": "MESOS",
    "volumes": [
      {
        "external": {
          "name": "kdc-db",
          "provider": "dvdi",
          "options": {
            "dvdi/driver": "rexray"
          },
          "size": 1
        },
        "mode": "RW",
        "containerPath": "lib/heimdal-kdc"
      }
    ],
    "docker": {
      "image": "icharalampidis/projects:kdc",
      "forcePullImage": true
    }
  },
  "networks": [
    {
      "mode": "host"
    }
  ],
  "portDefinitions": [
    {
      "port": 2500,
      "name": "kdc"
    },
    {
      "port": 2501,
      "name": "web"
    }
  ],
  "secrets": {
    "secret0": {
      "source": "kdc-admin"
    }
  },
  "env": {
    "SERVICE_ACCOUNT_SECRET": {
      "secret": "secret0"
    }
  },
  "labels": {
    "DCOS_SERVICE_NAME": "kdc-admin-api",
    "DCOS_SERVICE_PORT_INDEX": "1",
    "DCOS_SERVICE_SCHEME": "http"
  },
  "requirePorts": true
}
